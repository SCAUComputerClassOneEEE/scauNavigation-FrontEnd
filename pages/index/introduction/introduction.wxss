/* pages/index/introduction/introduction.wxss */

.img-container {
  width: 100%;
  height: 480rpx;
  position: relative;
}               
/*图片容器*/


.img-container .img {
  width: 100%;
  height: 100%;
}
/* 图片容器里的图片 */

.img-container .navigation-button {
  position: absolute;
  background-color: #fff;
  width: 100rpx;
  height: 100rpx;
  bottom: 0;
  right: 0;
  font-size: 20rpx;
  align-items: center;
  text-align:center;
  border-radius:30rpx 0rpx 0rpx 0rpx;   
}
/*导航按钮容器*/

.img-container .building-name-container{
  position: absolute;
  background-color: #fff;
  width: 350rpx;
  height: 50rpx;
  bottom: 0;
  left: 0;
  font-size: 30rpx;
  align-items: center;
  text-align:center;
  line-height: 50rpx;
  border-radius:0rpx 30rpx 0rpx 0rpx;   
}
/* 建筑名容器 */
.img-container .navigation-button .navigation-img {
  width: 90rpx;
  height: 90rpx;
}
/* 导航按钮图片 */

.introduction-container{
  position: relative;
  margin-left: 50rpx;
  margin-right: 50rpx;
}
/* 建筑介绍容器 */
.introduction-container .introduction-text{
  overflow: hidden;

}
/* 建筑介绍文本 */
.introduction-container .showMoreButton{
  position: absolute;
  background-color: #fff;
  height: 50rpx;
  width: 50rpx;
  bottom: 0;
  right: 0;
  box-shadow: 0 0  30rpx 30rpx #fff;
  border-radius: 50%;
}
/* 展开收起按钮 */